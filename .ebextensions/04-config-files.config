  "/opt/simplesamlphp/metadata/saml20-idp-remote.php":
    mode: "000644"
    owner: root
    group: root
    source: http://metadata.itlab.stanford.edu/simplesamlphp/metadata/saml20-idp-remote.php

  "/opt/simplesamlphp/cert/idp-itlab.crt":
    mode: "000644"
    owner: root
