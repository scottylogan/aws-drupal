files:
  "/etc/drush/drushrc.php":
    mode: "000644"
    owner: "root"
    group: "root"
    content: |
      <?php
      // Drupal core base directory
      $options['r'] = '/var/app/current';

  "/etc/profile.d/drush.sh":
    mode: "000644"
    owner: "root"
    group: "root"
    content: |
      # Add drush directory to PATH
      export PATH=$PATH:/opt/drush

